doctype html
html#ng-app(lang='en', ng-app='XformationApp')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='css/style.min.css')
    title Statistics of X-Formation
  body
    main#add.container
      h1.title Statistics of X-Formation
      nav.main-menu
        ul(ng-controller='headerController')
          li
            a(ng-class="{ active: isActive('/repositories')}", href='#!repositories') Repositories
          li
            a(ng-class="{ active: isActive('/contributors')}", href='#!contributors') Contributors
      .ng-view
      footer.row
        .col-sm-4.text-center
          i.fa.fa-envelope
          | e-mail: jakub.borow@gmail.com
        .col-sm-4.text-center
          i.fa.fa-scissors
          a(href='http://www.jakubborowiec.pl/en/') My portfolio
        .col-sm-4.text-center
          i.fa.fa-copyright
          | copryright: Jakub Borowiec
      script(src="js/app.min.js")
